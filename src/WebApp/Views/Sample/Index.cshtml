@model IEnumerable<Sample>
@{
    ViewBag.Title = "Sample List";
    Layout = "_Layout";
}

<h2>Sample List</h2>

<ul class="list-group list-group-flush mt-2">
    @foreach (var sample in Model)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center pl-0">
            <div class="container pl-0">
                <div class="row">
                    <div class="col-sm-10">
                        @sample.Title
                    </div>
                </div>
            </div>
        </li>
    }
</ul>